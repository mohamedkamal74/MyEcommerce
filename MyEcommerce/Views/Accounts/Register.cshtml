@model RegisterViewModel

<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Create New Account</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>
                <form asp-action="Register" method="post">
                    <div asp-validation-summary=ModelOnly class="text-danger"></div>
                    <div class="control-group">
                        <input type="text" class="form-control" asp-for=Name required="required" placeholder="Your Name"
                        data-validation-required-message="Please enter your name">
                        <span asp-validation-for=Name class="text-danger" ></span>
                    </div>
                    <div class="control-group">
                        <input type="email" class="form-control" asp-for=Email placeholder="Your Email" required="required" >
                        <span asp-validation-for=Email class="text-danger"></span>

                    </div>
                    <div class="control-group">
                        <input type="password" class="form-control" placeholder="Password" asp-for=Password>
                        <span asp-validation-for=Password class="text-danger"></span>

                    </div>

                    <div class="control-group">
                        <input type="password" class="form-control" placeholder="Confirm Password" asp-for=ConfirmPassword>
                        <span asp-validation-for=ConfirmPassword class="text-danger"></span>

                    </div>
                   
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit" asp-controller="Accounts" asp-action="Register">
                           Register
                        </button>
                    </div>
                </form>
            </div>
        </div>
       
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}